{
    "extends": "airbnb",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "max-len": [
            2,
            126,
            4
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/test/*.js"
                ]
            }
        ]
    },
    "env": {
        "mocha": true,
        "es6": true
    },
    "globals": {
        "artifacts": true,
        "web3": true,
        "contract": true
    }
}
